{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(env)",
      "Skill(sc:workflow)",
      "Skill(sc:save)",
      "Bash(python -m pytest chairman_agents/tests/ -v --tb=short)",
      "Bash(python -m pytest tests/ -v --tb=short --no-cov)",
      "Bash(python -m pytest chairman_agents/tests/ -v --tb=short --no-cov)",
      "Bash(pip install pyyaml pytest-asyncio -q)",
      "Bash(python -m pytest chairman_agents/tests/ --tb=line -q)",
      "Bash(python -m pytest chairman_agents/tests/core/ chairman_agents/tests/cognitive/ chairman_agents/tests/integration/test_llm_cache.py -v --tb=line -q)",
      "Bash(python -m pytest chairman_agents/tests/core/test_exceptions.py -v)"
    ]
  },
  "enabledPlugins": {
    "github@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "playwright@claude-plugins-official": true,
    "serena@claude-plugins-official": false,
    "firebase@claude-plugins-official": true,
    "gitlab@claude-plugins-official": true,
    "slack@claude-plugins-official": true,
    "supabase@claude-plugins-official": true,
    "stripe@claude-plugins-official": true,
    "asana@claude-plugins-official": true,
    "linear@claude-plugins-official": true,
    "greptile@claude-plugins-official": true,
    "laravel-boost@claude-plugins-official": true
  },
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ]
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "fetch": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-fetch"
      ]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ]
    }
  }
}
