name: ci

on:
  push:
    branches: ["**"]
  pull_request:
    branches: ["**"]

jobs:
  # ===========================================================================
  # 主检查：Ubuntu（快、便宜、标准）
  # ===========================================================================
  check:
    runs-on: ubuntu-latest
    timeout-minutes: 15
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"
          cache: "pip"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
          pip install -r requirements-dev.txt

      # Quality Gate (Exit codes: 0=pass, 2=format/lint, 3=type, 4=test)
      - name: Format check
        id: format
        run: python -m ruff format --check . || exit 2

      - name: Lint check
        id: lint
        run: python -m ruff check . || exit 2

      - name: Type check
        id: type
        run: python -m mypy . || exit 3

      - name: Test with coverage
        id: test
        run: python -m pytest -q --cov=src --cov-report=term-missing:skip-covered --cov-fail-under=85 || exit 4

      # =========================================================================
      # Policy Check (Military-Grade v3.0) - 校验报告格式和固定路径
      # Exit code 12 = POLICY_VIOLATION
      # =========================================================================
      - name: Policy check
        id: policy
        if: always()
        run: |
          # 安装 jsonschema
          pip install jsonschema >/dev/null 2>&1 || true
          
          # 运行 validate_policy.py 校验所有报告
          python scripts/validate_policy.py --ci-report artifacts/check/report.json || exit 12

      # Generate check report (JSON)
      - name: Generate check report
        if: always()
        run: |
          mkdir -p artifacts/check
          cat << EOF > artifacts/check/report.json
          {
            "timestamp": "$(date -u +%Y-%m-%dT%H:%M:%SZ)",
            "commit": "${{ github.sha }}",
            "branch": "${{ github.ref_name }}",
            "os": "ubuntu-latest",
            "checks": [
              {"name": "format", "status": "${{ steps.format.outcome == 'success' && 'PASS' || 'FAIL' }}"},
              {"name": "lint", "status": "${{ steps.lint.outcome == 'success' && 'PASS' || 'FAIL' }}"},
              {"name": "type", "status": "${{ steps.type.outcome == 'success' && 'PASS' || 'FAIL' }}"},
              {"name": "test", "status": "${{ steps.test.outcome == 'success' && 'PASS' || 'FAIL' }}"}
            ]
          }
          EOF
          cat artifacts/check/report.json

      # =========================================================================
      # [!] SECURITY: Whitelist upload only - DO NOT change to:
      #     path: artifacts
      #     path: artifacts/**
      #     path: artifacts/*
      # Only upload explicitly named files to prevent sensitive data leakage.
      # See docs/DEVELOPMENT.md "CI Upload Policy" for details.
      # =========================================================================
      - name: Upload check report
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: check-report-ubuntu
          path: |
            artifacts/check/report.json
          if-no-files-found: ignore

  # ===========================================================================
  # Windows 验证：确保 Windows 兼容（CTP SDK 目标平台）
  # ===========================================================================
  windows-check:
    runs-on: windows-latest
    timeout-minutes: 20
    needs: check  # 先跑 Ubuntu，通过后再跑 Windows
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"
          cache: "pip"

      - name: Create venv
        shell: pwsh
        run: |
          python -m venv .venv
          .\.venv\Scripts\python.exe -m pip install -U pip setuptools wheel

      - name: Install deps
        shell: pwsh
        run: |
          .\.venv\Scripts\python.exe -m pip install -r requirements.txt
          .\.venv\Scripts\python.exe -m pip install -r requirements-dev.txt

      # =========================================================================
      # Windows Sanity Check：确保能 import 核心模块（捕获 Windows 专属问题）
      # 不重复 lint/type，但验证：路径/编码/行尾/依赖 在 Windows 正常
      # =========================================================================
      - name: Windows sanity check
        shell: pwsh
        run: |
          Write-Host "Checking tool versions..."
          .\.venv\Scripts\python.exe -m ruff --version

          Write-Host "Checking core imports..."
          .\.venv\Scripts\python.exe -c @"
          import sys
          print(f'Python: {sys.version}')

          # Core modules (军规级：使用实际存在的导出)
          from src import config
          from src.runner import run_f21, init_components, Components
          from src.orchestrator import handle_risk_update, OrchestratorResult
          from src.trading.live_guard import LiveModeGuard, TradeMode
          from src.trading.ci_gate import CIGate, ExitCode, enable_check_mode
          from src.risk.manager import RiskManager
          from src.execution.broker import Broker

          print('All core imports OK')

          # Verify CHECK mode works
          enable_check_mode()
          print('CHECK mode enabled OK')
          "@
          if ($LASTEXITCODE -ne 0) { exit 1 }

      # Windows 测试
      - name: Test on Windows
        shell: pwsh
        run: |
          .\.venv\Scripts\python.exe -m pytest -q --cov=src --cov-fail-under=85

      # Export context (仅 Windows，因为这是目标部署平台)
      - name: Export context
        if: always()
        continue-on-error: true
        shell: pwsh
        run: |
          New-Item -ItemType Directory -Force -Path artifacts\context | Out-Null
          .\.venv\Scripts\python.exe scripts\export_context.py --out artifacts\context\context.md --level lite

      # =========================================================================
      # [!] SECURITY: Whitelist upload only - DO NOT change to:
      #     path: artifacts
      #     path: artifacts/**
      #     path: artifacts/*
      # Only upload explicitly named files to prevent sensitive data leakage.
      # Debug-level context is LOCAL ONLY - never upload to CI.
      # See docs/DEVELOPMENT.md "CI Upload Policy" for details.
      # =========================================================================
      - name: Upload context
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: context-windows
          path: |
            artifacts/context/context.md
          if-no-files-found: ignore