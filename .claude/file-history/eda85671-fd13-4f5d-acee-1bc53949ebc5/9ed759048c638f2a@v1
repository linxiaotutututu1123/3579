# =============================================================================
# V4PRO 日历套利策略配置 (Calendar Arbitrage Strategy)
# =============================================================================
# 军规级 v4.0 | M4降级兜底 | M5成本先行 | M6熔断保护
# =============================================================================

strategy:
  name: calendar_arb
  version: "4.0"
  description: "日历价差套利策略"

# Kalman滤波参数
kalman:
  # 状态转移方差
  delta: 0.0001
  # 观测噪声方差
  r: 0.001
  # Beta边界约束
  beta_min: 0.5
  beta_max: 2.0

# 信号生成参数
signal:
  # Z-score阈值
  entry_z: 2.0          # 开仓Z-score
  exit_z: 0.5           # 平仓Z-score
  stop_z: 4.0           # 止损Z-score (M6)

  # 半衰期门禁 (M4)
  max_half_life: 30     # 最大半衰期(天)
  min_half_life: 3      # 最小半衰期(天)

  # 相关性门禁
  min_correlation: 0.8  # 最低相关性

  # 到期门禁 (M15)
  expiry_days_buffer: 10 # 到期前N天停止开仓

# 成本门禁 (M5)
cost:
  min_edge_bps: 5       # 最小边际收益(基点)
  include_slippage: true
  include_impact: true

# 持仓管理
position:
  max_spread_lots: 20   # 单价差最大手数
  max_total_lots: 100   # 总持仓上限

# 降级配置 (M4)
fallback:
  chain:
    - calendar_arb
    - linear_ai
    - simple_ai
  timeout_ms: 1000      # 超时触发降级
  max_retries: 3        # 最大重试次数

# 交割感知 (M15)
delivery:
  roll_days_before: 15  # 到期前N天开始移仓
  position_transfer: true
  force_close_days: 5   # 到期前N天强制平仓
