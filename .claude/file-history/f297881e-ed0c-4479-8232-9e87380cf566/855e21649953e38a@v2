# =============================================================================
# å†›è§„çº§ CI Pipeline (v4.0)
# =============================================================================
# é—¨ç¦æ£€æŸ¥é¡ºåºï¼ˆä¸¥æ ¼æŒ‰ç…§å†›è§„çº§è¦æ±‚ï¼‰ï¼š
#   Step 1: Ruff Format Check â†’ Exit 2 on failure
#   Step 2: Ruff Lint Check   â†’ Exit 2 on failure
#   Step 3: Mypy Type Check   â†’ Exit 3 on failure
#   Step 4: Pytest Tests      â†’ Exit 4 on failure
#   Step 5: Coverage Check    â†’ Exit 5 on failure
#   Step 6: Policy Validation â†’ Exit 12 on failure
# =============================================================================

name: ci

on:
  push:
    branches: ["**"]
  pull_request:
    branches: ["**"]

# å†›è§„çº§ç¯å¢ƒå˜é‡
env:
  PYTHON_VERSION: "3.11"
  COVERAGE_THRESHOLD: 85
  SCHEMA_VERSION: 3

jobs:
  # ===========================================================================
  # ä¸»æ£€æŸ¥ï¼šUbuntuï¼ˆå¿«ã€ä¾¿å®œã€æ ‡å‡†ï¼‰
  # ===========================================================================
  check:
    runs-on: ubuntu-latest
    timeout-minutes: 15
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ env.PYTHON_VERSION }}
          cache: "pip"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
          pip install -r requirements-dev.txt

      # =========================================================================
      # å†›è§„çº§é—¨ç¦æ£€æŸ¥ (æŒ‰ä¸¥æ ¼é¡ºåºæ‰§è¡Œ)
      # Exit codes: 0=pass, 2=format/lint, 3=type, 4=test, 5=coverage, 12=policy
      # =========================================================================

      # Step 1: Format check (Exit 2)
      - name: "[Gate 1/6] Format check"
        id: format
        run: |
          echo "ğŸ” Checking code format with ruff..."
          python -m ruff format --check . || exit 2
          echo "âœ… Format check passed"

      # Step 2: Lint check (Exit 2)
      - name: "[Gate 2/6] Lint check"
        id: lint
        run: |
          echo "ğŸ” Running lint check with ruff..."
          python -m ruff check . || exit 2
          echo "âœ… Lint check passed"

      # Step 3: Type check (Exit 3)
      - name: "[Gate 3/6] Type check"
        id: type
        run: |
          echo "ğŸ” Running type check with mypy..."
          python -m mypy . --ignore-missing-imports || exit 3
          echo "âœ… Type check passed"

      # Step 4: Test with coverage (Exit 4 or 5)
      - name: "[Gate 4/6] Test with coverage"
        id: test
        run: |
          echo "ğŸ§ª Running tests with coverage..."
          python -m pytest -q --cov=src --cov-report=term-missing:skip-covered --cov-report=json --cov-fail-under=${{ env.COVERAGE_THRESHOLD }} || exit 4
          echo "âœ… Tests passed with coverage >= ${{ env.COVERAGE_THRESHOLD }}%"

      # Step 5: Coverage verification (å·²åœ¨Step 4ä¸­å¤„ç†)
      - name: "[Gate 5/6] Coverage threshold verification"
        id: coverage
        run: |
          echo "ğŸ“Š Verifying coverage threshold..."
          if [ -f coverage.json ]; then
            COVERAGE=$(python -c "import json; print(json.load(open('coverage.json'))['totals']['percent_covered'])")
            echo "Coverage: $COVERAGE%"
            if (( $(echo "$COVERAGE < ${{ env.COVERAGE_THRESHOLD }}" | bc -l) )); then
              echo "âŒ Coverage $COVERAGE% is below threshold ${{ env.COVERAGE_THRESHOLD }}%"
              exit 5
            fi
            echo "âœ… Coverage verification passed"
          else
            echo "âš ï¸ coverage.json not found, skipping detailed verification"
          fi

      # Step 6: Policy validation (Exit 12)
      - name: "[Gate 6/6] Policy validation"
        id: policy
        if: always()
        run: |
          echo "ğŸ›¡ï¸ Running military-grade policy validation..."
          # å®‰è£… jsonschema å’Œ pyyaml
          pip install jsonschema pyyaml >/dev/null 2>&1 || true

          # åˆ›å»º artifacts ç›®å½•
          mkdir -p artifacts/check

          # è¿è¡Œ validate_policy.py
          python scripts/validate_policy.py || exit 12
          echo "âœ… Policy validation passed"

      # =========================================================================
      # ç”Ÿæˆå†›è§„çº§ JSON æŠ¥å‘Š (Schema v3)
      # =========================================================================
      - name: Generate check report (Schema v3)
        if: always()
        run: |
          mkdir -p artifacts/check

          # è·å–è¦†ç›–ç‡
          COVERAGE="0"
          if [ -f coverage.json ]; then
            COVERAGE=$(python -c "import json; print(round(json.load(open('coverage.json'))['totals']['percent_covered'], 2))")
          fi

          # ç”Ÿæˆ UUID å’Œ exec_id
          RUN_ID=$(python -c "import uuid; print(str(uuid.uuid4()))")
          EXEC_ID="${{ github.sha }}_$(date -u +%Y%m%d%H%M%S)"

          # ç¡®å®š overall å’Œ exit_code
          if [ "${{ steps.format.outcome }}" == "success" ] && \
             [ "${{ steps.lint.outcome }}" == "success" ] && \
             [ "${{ steps.type.outcome }}" == "success" ] && \
             [ "${{ steps.test.outcome }}" == "success" ]; then
            OVERALL="PASS"
            EXIT_CODE=0
          else
            OVERALL="FAIL"
            if [ "${{ steps.format.outcome }}" != "success" ] || [ "${{ steps.lint.outcome }}" != "success" ]; then
              EXIT_CODE=2
            elif [ "${{ steps.type.outcome }}" != "success" ]; then
              EXIT_CODE=3
            elif [ "${{ steps.test.outcome }}" != "success" ]; then
              EXIT_CODE=4
            else
              EXIT_CODE=1
            fi
          fi

          # ç”Ÿæˆç¬¦åˆ Schema v3 çš„æŠ¥å‘Š
          cat << EOF > artifacts/check/report.json
          {
            "schema_version": ${{ env.SCHEMA_VERSION }},
            "type": "ci",
            "overall": "$OVERALL",
            "exit_code": $EXIT_CODE,
            "check_mode": true,
            "timestamp": "$(date -u +%Y-%m-%dT%H:%M:%SZ)",
            "run_id": "$RUN_ID",
            "exec_id": "$EXEC_ID",
            "artifacts": {
              "report_path": "artifacts/check/report.json"
            },
            "git": {
              "commit": "${{ github.sha }}",
              "branch": "${{ github.ref_name }}",
              "repository": "${{ github.repository }}"
            },
            "environment": {
              "os": "ubuntu-latest",
              "python_version": "${{ env.PYTHON_VERSION }}",
              "runner": "${{ runner.name }}"
            },
            "coverage": {
              "percentage": $COVERAGE,
              "threshold": ${{ env.COVERAGE_THRESHOLD }}
            },
            "steps": [
              {
                "name": "format-check",
                "status": "${{ steps.format.outcome == 'success' && 'PASS' || 'FAIL' }}",
                "exit_code": ${{ steps.format.outcome == 'success' && '0' || '2' }}
              },
              {
                "name": "lint",
                "status": "${{ steps.lint.outcome == 'success' && 'PASS' || 'FAIL' }}",
                "exit_code": ${{ steps.lint.outcome == 'success' && '0' || '2' }}
              },
              {
                "name": "type-check",
                "status": "${{ steps.type.outcome == 'success' && 'PASS' || 'FAIL' }}",
                "exit_code": ${{ steps.type.outcome == 'success' && '0' || '3' }}
              },
              {
                "name": "test",
                "status": "${{ steps.test.outcome == 'success' && 'PASS' || 'FAIL' }}",
                "exit_code": ${{ steps.test.outcome == 'success' && '0' || '4' }}
              },
              {
                "name": "policy",
                "status": "${{ steps.policy.outcome == 'success' && 'PASS' || 'FAIL' }}",
                "exit_code": ${{ steps.policy.outcome == 'success' && '0' || '12' }}
              }
            ]
          }
          EOF

          echo "ğŸ“‹ Generated report:"
          cat artifacts/check/report.json

      # =========================================================================
      # [!] SECURITY: Whitelist upload only - DO NOT change to:
      #     path: artifacts
      #     path: artifacts/**
      #     path: artifacts/*
      # Only upload explicitly named files to prevent sensitive data leakage.
      # See docs/DEVELOPMENT.md "CI Upload Policy" for details.
      # =========================================================================
      - name: Upload check report
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: check-report-ubuntu
          path: |
            artifacts/check/report.json
            coverage.json
          if-no-files-found: ignore

  # ===========================================================================
  # Windows éªŒè¯ï¼šç¡®ä¿ Windows å…¼å®¹ï¼ˆCTP SDK ç›®æ ‡å¹³å°ï¼‰
  # ===========================================================================
  windows-check:
    runs-on: windows-latest
    timeout-minutes: 20
    needs: check  # å…ˆè·‘ Ubuntuï¼Œé€šè¿‡åå†è·‘ Windows
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ env.PYTHON_VERSION }}
          cache: "pip"

      - name: Create venv
        shell: pwsh
        run: |
          python -m venv .venv
          .\.venv\Scripts\python.exe -m pip install -U pip setuptools wheel

      - name: Install deps
        shell: pwsh
        run: |
          .\.venv\Scripts\python.exe -m pip install -r requirements.txt
          .\.venv\Scripts\python.exe -m pip install -r requirements-dev.txt

      # =========================================================================
      # Windows Sanity Checkï¼šç¡®ä¿èƒ½ import æ ¸å¿ƒæ¨¡å—ï¼ˆæ•è· Windows ä¸“å±é—®é¢˜ï¼‰
      # ä¸é‡å¤ lint/typeï¼Œä½†éªŒè¯ï¼šè·¯å¾„/ç¼–ç /è¡Œå°¾/ä¾èµ– åœ¨ Windows æ­£å¸¸
      # =========================================================================
      - name: Windows sanity check
        shell: pwsh
        env:
          PYTHONIOENCODING: utf-8
          PYTHONUTF8: "1"
        run: |
          Write-Host "Checking tool versions..."
          .\.venv\Scripts\python.exe -m ruff --version

          Write-Host "Checking core imports..."
          .\.venv\Scripts\python.exe -c @"
          import sys
          print(f'Python: {sys.version}')

          # Core modules
          from src import config
          from src.runner import run_f21, init_components, Components
          from src.orchestrator import handle_risk_update, OrchestratorResult
          from src.trading.live_guard import LiveModeGuard, TradeMode
          from src.trading.ci_gate import CIGate, ExitCode, enable_check_mode
          from src.risk.manager import RiskManager
          from src.execution.broker import Broker

          print('All core imports OK')

          # Verify CHECK mode works
          enable_check_mode()
          print('CHECK mode enabled OK')

          # Verify new exit codes exist (v4.0)
          assert hasattr(ExitCode, 'MODEL_WEIGHTS_FAIL'), 'Missing MODEL_WEIGHTS_FAIL'
          assert hasattr(ExitCode, 'SCENARIO_MISSING'), 'Missing SCENARIO_MISSING'
          assert hasattr(ExitCode, 'CAPABILITY_MISSING'), 'Missing CAPABILITY_MISSING'
          assert ExitCode.MODEL_WEIGHTS_FAIL == 10
          assert ExitCode.SCENARIO_MISSING == 11
          assert ExitCode.CAPABILITY_MISSING == 13
          print('All exit codes verified OK (v4.0)')
          "@
          if ($LASTEXITCODE -ne 0) { exit 1 }

      # Windows æµ‹è¯• (å†›è§„çº§è¦†ç›–ç‡é—¨æ§›)
      - name: Test on Windows
        shell: pwsh
        env:
          PYTHONIOENCODING: utf-8
          PYTHONUTF8: "1"
        run: |
          .\.venv\Scripts\python.exe -m pytest -q --cov=src --cov-fail-under=${{ env.COVERAGE_THRESHOLD }}

      # Export context (ä»… Windowsï¼Œå› ä¸ºè¿™æ˜¯ç›®æ ‡éƒ¨ç½²å¹³å°)
      - name: Export context
        if: always()
        continue-on-error: true
        shell: pwsh
        env:
          PYTHONIOENCODING: utf-8
          PYTHONUTF8: "1"
        run: |
          New-Item -ItemType Directory -Force -Path artifacts\context | Out-Null
          .\.venv\Scripts\python.exe scripts\export_context.py --out artifacts\context\context.md --level lite

      # =========================================================================
      # [!] SECURITY: Whitelist upload only - DO NOT change to:
      #     path: artifacts
      #     path: artifacts/**
      #     path: artifacts/*
      # Only upload explicitly named files to prevent sensitive data leakage.
      # Debug-level context is LOCAL ONLY - never upload to CI.
      # See docs/DEVELOPMENT.md "CI Upload Policy" for details.
      # =========================================================================
      - name: Upload context
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: context-windows
          path: |
            artifacts/context/context.md
          if-no-files-found: ignore

  # ===========================================================================
  # é—¨ç¦çŠ¶æ€æ±‡æ€» (å†›è§„çº§)
  # ===========================================================================
  gate-summary:
    runs-on: ubuntu-latest
    needs: [check, windows-check]
    if: always()
    steps:
      - name: Gate Summary
        run: |
          echo "=============================================="
          echo "       å†›è§„çº§é—¨ç¦çŠ¶æ€æ±‡æ€» (v4.0)              "
          echo "=============================================="
          echo ""
          echo "Ubuntu Check:  ${{ needs.check.result }}"
          echo "Windows Check: ${{ needs.windows-check.result }}"
          echo ""
          if [ "${{ needs.check.result }}" == "success" ] && [ "${{ needs.windows-check.result }}" == "success" ]; then
            echo "âœ… å…¨éƒ¨é—¨ç¦é€šè¿‡ - å…è®¸åˆå¹¶"
            exit 0
          else
            echo "âŒ é—¨ç¦å¤±è´¥ - ç¦æ­¢åˆå¹¶"
            exit 1
          fi
