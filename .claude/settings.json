  "hooks": {
    "preToolExecution": [
      {
        "matcher": "Bash(*)",
        "command": "echo '[PRE] 执行命令...'",
        "timeout": 5000
      },
    ],
    "postToolExecution": [
      {
        "matcher": "Write(**/*.py)",
        "command": "ruff format \"$TOOL_INPUT\" 2>nul || true",
        "timeout": 30000
      },
      {
        "matcher": "Write(**/*.py)",
        "command": "ruff check --fix \"$TOOL_INPUT\" 2>nul || true",
        "timeout": 30000
      },
      {
        "matcher": "Write(**/*.{ts,tsx,js,jsx,vue,svelte})",
        "command": "npx prettier --write \"$TOOL_INPUT\" 2>nul || npx eslint --fix \"$TOOL_INPUT\" 2>nul || true",
        "timeout": 30000
      },
      {
        "matcher": "Write(**/*.{json,yaml,yml,md,html,css,scss})",
        "command": "npx prettier --write \"$TOOL_INPUT\" 2>nul || true",
        "timeout": 30000
      },
      {
        "matcher": "Write(**/*.rs)",
        "command": "rustfmt \"$TOOL_INPUT\" 2>nul || true",
        "timeout": 30000
      },
    ],
  },

  "thinkingMode": "enabled",
