      "Bash(npm *)", "Bash(npx *)", "Bash(ruff *)",
      "Bash(pytest *)", "Bash(mypy *)", "Bash(ollama *)",
      "Bash(ls *)", "Bash(cat *)", "Bash(mkdir *)",
      "Bash(echo *)", "Bash(pwd)",
      "Read", "Edit", "Write", "mcp__*"
    ],
    "deny": [
      "Bash(rm -rf /)", "Bash(rm -rf ~)", "Bash(format *)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          { "type": "command", "command": "ruff format \"`$TOOL_INPUT\" 2>nul || exit 0" }
