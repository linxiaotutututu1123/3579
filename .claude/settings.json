  "hooks": {
    "postToolExecution": [
      {
        "matcher": "Write(**/*.{ts,tsx,js,jsx,vue})",
        "command": "npx eslint --fix \"$TOOL_INPUT\" 2>/dev/null || true",
        "timeout": 30000
      },
      {
        "matcher": "Write(**/*.{css,scss,less,html,json,md,yaml,yml})",
        "command": "npx prettier --write \"$TOOL_INPUT\" 2>/dev/null || true",
        "timeout": 30000
      },
      {
        "matcher": "Write(**/*.py)",
        "command": "black \"$TOOL_INPUT\" 2>/dev/null || ruff format \"$TOOL_INPUT\" 2>/dev/null || true",
        "timeout": 30000
      },
      {
        "matcher": "Write(**/*.php)",
        "command": "php-cs-fixer fix \"$TOOL_INPUT\" 2>/dev/null || true",
        "timeout": 30000
      },
      {
        "matcher": "Write(**/*.rs)",
        "command": "rustfmt \"$TOOL_INPUT\" 2>/dev/null || true",
        "timeout": 30000
      },
      {
        "matcher": "Write(**/*.go)",
        "command": "gofmt -w \"$TOOL_INPUT\" 2>/dev/null || true",
        "timeout": 30000
      }
    ],
