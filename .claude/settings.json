{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "env": {
    "ANTHROPIC_MODEL": "claude-opus-4-5-20251101-thinking",
    "ANTHROPIC_SMALL_FAST_MODEL": "claude-opus-4-5-20251101-thinking",
    "ANTHROPIC_BASE_URL": "https://api.xiaocaseai.com",
    "ANTHROPIC_AUTH_TOKEN": "sk-H2INpn37Rd2mAFRY41c9M0Y9skiOqBAG1OCXqrqJLrxzuOcS",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "200000",
    "MAX_THINKING_TOKENS": "150000",
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "600000",
    "PYTHONIOENCODING": "utf-8"
  },

  "enabledPlugins": {
    "github@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "playwright@claude-plugins-official": true,
    "serena@claude-plugins-official": false,
    "firebase@claude-plugins-official": true,
    "gitlab@claude-plugins-official": true,
    "slack@claude-plugins-official": true,
    "supabase@claude-plugins-official": true,
    "stripe@claude-plugins-official": true,
    "asana@claude-plugins-official": true,
    "linear@claude-plugins-official": true,
    "greptile@claude-plugins-official": true,
    "laravel-boost@claude-plugins-official": true
  },

  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "."]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"]
    }
  },

  "permissions": {
    "allow": [
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(.venv/Scripts/python.exe:*)",
      "Bash(.venv/Scripts/pip.exe:*)",
      "Bash(.venv/bin/python:*)",
      "Bash(.venv/bin/pip:*)",
      "Bash(uv:*)",
      "Bash(poetry:*)",
      "Bash(pytest:*)",
      "Bash(black:*)",
      "Bash(isort:*)",
      "Bash(pre-commit:*)",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(ls:*)",
      "Bash(dir:*)",
      "Bash(cat:*)",
      "Bash(type:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(touch:*)",
      "Bash(echo:*)",
      "Bash(pwd)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(docker:*)",
      "Bash(make:*)",
      "WebSearch",
      "Bash(Write: *)",
      "Bash(Agent: *)",
      "Bash(sc:*)",
      "Bash(kfc:*)",
      "Bash(site-packages:*)",
      "Bash(site-packages:superclaude:*)",
      "Bash(site-packages:superclaude:agents:*)",
      "Bash(site-packages:superclaude:plugins:*)",
      "Bash(site-packages:superclaude:utils:*)",
      "Bash(site-packages:superclaude:mcp:*)",
      "mcp__*"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf C:*)",
      "Bash(del /f /s /q C:*)",
      "Bash(format:*)",
      "Bash(git push --force origin main)",
      "Bash(git push --force origin master)",
      "Bash(git push -f origin main)",
      "Bash(git push -f origin master)",
      "Write(.git/objects/**)",
      "Write(.git/refs/**)",
      "Write(.venv/Lib/**)",
      "Write(.venv/lib/**)",
      "Write(node_modules/**)",
      "Write(.env)",
      "Write(.env.local)",
      "Write(*.pem)",
      "Write(*.key)"
    ]
  },

  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write(**/*.py)",
        "hooks": [
          {
            "type": "command",
        "command": "ruff format \"$TOOL_INPUT\" 2>nul || exit 0",
        "timeout": 30000
      }
    ]
  }

    ]
  }
}
