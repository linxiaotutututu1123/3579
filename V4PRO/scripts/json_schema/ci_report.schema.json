{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://3579.dev/schemas/ci_report.schema.json",
  "title": "CI Report Schema (Military-Grade v3.0)",
  "description": "强制 schema 校验 - 缺任何必填字段即 POLICY_VIOLATION (exit 12)",
  "type": "object",
  "required": [
    "schema_version",
    "type",
    "overall",
    "exit_code",
    "check_mode",
    "timestamp",
    "run_id",
    "exec_id",
    "artifacts",
    "steps"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 3,
      "description": "Schema 版本号，必须 >= 3"
    },
    "type": {
      "type": "string",
      "enum": ["ci"],
      "description": "报告类型"
    },
    "overall": {
      "type": "string",
      "enum": ["PASS", "FAIL"],
      "description": "总体结果"
    },
    "exit_code": {
      "type": "integer",
      "enum": [0, 2, 3, 4, 5, 12],
      "description": "退出码: 0=PASS, 2=FORMAT/LINT, 3=TYPE, 4=TEST, 5=COVERAGE, 12=POLICY"
    },
    "check_mode": {
      "type": "boolean",
      "description": "是否启用 CHECK_MODE（CI 始终为 true）"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 时间戳"
    },
    "run_id": {
      "type": "string",
      "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$",
      "description": "运行唯一标识 (UUID)"
    },
    "exec_id": {
      "type": "string",
      "description": "执行标识 (commit_sha + timestamp)"
    },
    "artifacts": {
      "type": "object",
      "required": ["report_path"],
      "properties": {
        "report_path": {
          "type": "string",
          "const": "artifacts/check/report.json"
        },
        "context_path": {
          "type": "string"
        },
        "events_jsonl_path": {
          "type": "string"
        }
      },
      "description": "产物路径清单"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/CIStep"
      },
      "description": "CI 步骤列表"
    },
    "context_manifest_sha": {
      "type": "string",
      "description": "context.md 的 SHA256 指纹（用于审计）"
    }
  },
  "definitions": {
    "CIStep": {
      "type": "object",
      "required": ["name", "status", "exit_code", "duration_ms"],
      "properties": {
        "name": {
          "type": "string",
          "enum": ["format-check", "lint", "type", "test", "coverage", "policy-check"]
        },
        "status": {
          "type": "string",
          "enum": ["PASS", "FAIL", "SKIP"]
        },
        "exit_code": {
          "type": ["integer", "null"]
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0
        },
        "summary": {
          "type": "string"
        },
        "failures": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CIFailure"
          }
        },
        "hints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "reason": {
          "type": "string",
          "description": "SKIP 时的原因"
        }
      }
    },
    "CIFailure": {
      "type": "object",
      "required": ["file", "line", "rule", "message"],
      "properties": {
        "file": {
          "type": "string"
        },
        "line": {
          "type": "integer"
        },
        "rule": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": false
}
