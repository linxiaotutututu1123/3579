# =============================================================================
# V4PRO 仿真环境配置 (Simulation Environment)
# =============================================================================
# 军规级 v4.0 | 环境隔离 M8
# 用途: 仿真交易、策略验证、门禁检查
# =============================================================================

environment: sim
description: "仿真环境 - 策略验证用"

# 模式控制
mode:
  check_mode: true      # 仿真环境强制CHECK_MODE
  live_trading: false   # 禁止实盘交易
  sim_trading: true     # 允许仿真交易

# Broker配置
broker:
  type: simnow          # 使用SimNow模拟盘
  front_addr: "tcp://180.168.146.187:10212"
  broker_id: "9999"
  connect_timeout: 10

# 行情配置
market:
  source: simnow        # SimNow行情
  front_addr: "tcp://180.168.146.187:10211"
  reconnect_interval: 5

# 风控配置
risk:
  max_position: 50      # 最大持仓(手)
  max_daily_loss: 50000 # 单日最大亏损(元)
  kill_switch: true     # 熔断开关
  margin_warning: 0.7   # 保证金预警线(70%)
  margin_critical: 0.85 # 保证金临界线(85%)

# 日志配置
logging:
  level: INFO
  file: logs/sim.log
  console: true

# 数据库配置
database:
  type: sqlite
  path: data/sim.db

# 审计配置
audit:
  enabled: true
  path: artifacts/sim/audit.jsonl
  fsync: true
